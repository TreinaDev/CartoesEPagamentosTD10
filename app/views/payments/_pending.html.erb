<nav aria-label="breadcrumb" >
  <ol class="breadcrumb" >
    <li class="breadcrumb-item fw-bold"><%= link_to t('breadcrumb.home'), root_path %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= t('breadcrumb.pending_payments') %></li>
  </ol>
</nav>

<%= render partial: 'shared/search_bar', locals: {i18n_path: 'payments.pending.waiting', especific_search_path: search_pending_payments_path,
                                                  placeholder: 'Pesquisar pelo nÃºmero do pedido ou cpf'}%>

<section class='d-md-flex p-2'>
    <div id='pre-approved-payments' class='container m-2'>
        <h2 class='title-style'><%= t('.pre_approved') %>:</h2>
        <% if @pre_approved.empty? %>
            <span><%= t('.no_pre_approved_payments') %></span>
        <% else %>
          <%@pre_approved.each do |payment|%>
            <%= render partial: 'payment_info', locals: {payment: payment}%>
          <%end%>
        <% end %>
  </div>

  <div id='pre-reproved-payments' class='container m-2'>
        <h2 class='title-style'><%= t('.pre_reproved') %>:</h2>
        <% if @pre_reproved.empty? %>
            <span><%= t('.no_pre_reproved_payments') %></span>
        <% else %>
            <%@pre_reproved.each do |payment|%>
              <%= render partial: 'payment_info', locals: {payment: payment}%>
            <%end%>
        <% end %>
    </div>
</section>