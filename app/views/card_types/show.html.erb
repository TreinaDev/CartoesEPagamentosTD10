<nav aria-label="breadcrumb" >
  <ol class="breadcrumb" >
    <li class="breadcrumb-item fw-bold"><%= link_to t('.home'), root_path %></li>
    <li class="breadcrumb-item fw-bold" aria-current="page"><%= link_to t('.card_types'), card_types_path %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= t('.card') %> <%= @card_type.name %></li>
  </ol>
</nav>

<section class='card w-25 mx-auto'>
  <h1 class='card-header'><%=t('.card')%> <%= @card_type.name %></h1>

  <% if @card_type.icon.attached? %>
    <%= image_tag @card_type.icon, alt: @card_type.name, class: 'card-img-top p-3' %>
  <% end %>
  
  <div class='card-body'>
    <span class='card-text'><%= t('.initial_points') %>: <%= @card_type.start_points %></span>
  </div>
  
  <div class='card-footer'>
    <%=link_to t('.edit'), edit_card_type_path(@card_type), class: 'btn btn-secondary'%>
    <% if @card_type.emission %>
      <%= button_to t('.btn_disable_emission'), disable_card_type_path(@card_type), class: 'btn btn-danger', method: :patch %>
    <% else %>
      <%= button_to t('.btn_enable_emission'), enable_card_type_path(@card_type), class: 'btn btn-success', method: :patch %>
    <% end %>
  </div>
</section>