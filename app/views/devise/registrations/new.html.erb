<div class="d-flex flex-column align-items-center">
  <h1>Cadastrar Administrador</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, placeholder: 'Digite seu nome completo' %>
    </div>

      <div class="field">
      <%= f.label :cpf%>
      <%= f.text_field :cpf, autofocus: true, placeholder: 'Digite seu cpf. Apenas nÃºmeros.' %>
    </div>

    <div class="field">
      <%= f.label :email%>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Digite um email' %>
    </div>

    <div class="field">
      <div>
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>: mÃ­nimo de (<%= @minimum_password_length %>) caracteres</em>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: 'new-password', placeholder: 'Crie uma senha' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: 'Confirme a senha' %>
    </div>

    <div class="actions">
      <%= f.submit 'Cadastrar', class: 'btn btn-primary'%>
    </div>
    
    <div class="gap-0">
      <%= render 'devise/shared/links' %>
    </div>
  <% end %>
</div>
