<div class="d-flex flex-column align-items-center">
  <h1><%=t('.title')%></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, placeholder: t('.placeholder_name') %>
    </div>

      <div class="field">
      <%= f.label :cpf%>
      <%= f.text_field :cpf, autofocus: true, placeholder: t('.placeholder_cpf') %>
    </div>

    <div class="field">
      <%= f.label :email%>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: t('.placeholder_email') %>
    </div>

    <div class="field">
      <div>
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>: <%= t('.minimum_password_length',count: @minimum_password_length)%></em>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: 'new-password', placeholder: t('.placeholder_password') %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: t('.placeholder_confirm') %>
    </div>

    <div class="actions">
      <%= f.submit t('.sign_up'), class: 'btn btn-primary'%>
    </div>
    
    <div class="gap-0">
      <%= render 'devise/shared/links' %>
    </div>
  <% end %>
</div>
