<!DOCTYPE html>
<html>
  <head>
    <title>CardsPayments</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body class='bg-secondary'>
    <header>
      <nav class="navbar navbar-expand-lg bg-body-tertiary admin">
        <div class="container-fluid">
          <%= link_to t('.brand_name'), root_path, class: 'navbar-brand' %>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to t('.home'), root_path, class: 'nav-link active' %>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  CartÃ£o
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to t('.card_types'), card_types_path, class: 'dropdown-item' %></li>
                  <li><%= link_to t('.new_card_types'), new_card_type_path, class: 'dropdown-item' %></li>
                  <li><%= link_to t('.provide_card_types'), companies_path, class: 'dropdown-item' %></li>
                </ul>
              </li>
            </ul>
          </div>
          <% if admin_signed_in? %>
            <%= current_admin.name %>
            <%= button_to 'Sair', destroy_admin_session_path, method: :delete, class: "sair" %>
          <% else %>
            <%= link_to 'Entrar', admin_session_path %>  
          <% end %>
        </div>
    </header>
    
    
    <main class='container'>
      <% if notice %>
        <p class="alert alert-primary w-75 mx-auto"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-warning w-75 mx-auto"><%= alert %></p>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
